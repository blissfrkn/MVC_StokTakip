@model MVC_StokTakip.Models.Entity.Sepet
@{
    ViewBag.Title = "MiktarEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="modal-header">

    <h2>Miktar Ekle</h2>
</div>
<div class="container">
    @using (Html.BeginForm("MiktarEkle2", "Sepet", FormMethod.Post))
    {
        <div class="modal-body">
            @Html.HiddenFor(x => x.ID)



            <div class="form-group">
                Ürün Kategori: @Html.DisplayFor(x => x.Urunler.Kategoriler.Kategori, new { @class = "form-control" })
            </div>
            <div class="form-group">
                Ürün Adı: @Html.DisplayFor(x => x.Urunler.UrunAdi, new { @class = "form-control" })
            </div>
            <div class="form-group">
                Ürün Barkod No: @Html.DisplayFor(x => x.Urunler.BarkodNo, new { @class = "form-control" })
            </div>
            @*<div class="form-group">
                Ürün Stok Kodu: @Html.DisplayFor(x => x.Urunler.StokKodu, new { @class = "form-control" })
            </div>*@

            <div class="form-group">
                Ürün Açıklama: @Html.DisplayFor(x => x.Urunler.Aciklama, new { @class = "form-control" })
            </div>
            <div class="form-group text-center" style="font-size:25px; color:red">
                Miktarı: @Html.DisplayFor(x => x.Miktari, new { @class = "form-control" })
            </div>



        </div>

        <div class="modal-footer" style="float:right">
            <button class="btn btn-success">Stok Ekle</button>
            <a href="/Sepet/Index" class="btn btn-dark">Çıkış</a>
        </div>
    }

</div>
