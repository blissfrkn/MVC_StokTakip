@using MVC_StokTakip.Models.Entity
@model List<Servis> 

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Servis Listesi</h2>

<table id="tbl1" class="table table-responsive-sm" style="margin-top:20px">
    <thead>
        <tr>
            <th>Durum</th>
            <th>Araç Plaka, Marka, Model</th>
            <th>Müşteri Ad, Soyad</th>
            <th>Tarih</th>
            <th>Detay</th>
           





        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Durumlar.Durum</td>
            <td>@k.Araclar.Plaka @k.Araclar.AracMarka.Marka @k.Araclar.Model</td>
            <td>@k.Araclar.Musteriler.Ad @k.Araclar.Musteriler.Soyad</td>
            <td>@Html.DisplayFor(x => k.Tarih)</td>
            <td><a href="/Servis/ServisDetay/?id=@k.ID" class="btn btn-success">Detaylar</a></td>

        </tr>
    }
</table>

<br />


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>


<script>
    $('#tbl1').dataTable({
        language: {
            "search": "Ara :",
            "info": "Gösteriliyor _START_ to _END_ of _TOTAL_ Girdilerden",
            "infoEmpty": "Gösteriliyor 0 to 0 of 0 Girdilerden",
            "info": "Gösteriliyor _START_ to _END_ of _TOTAL_ Girdilerden",
            "lengthMenu": "Kaçarlı Gösterilsin _MENU_ ",
            "zeroRecords": "Hiçbir Kayıt Bulunamadı.",
            "paginate": {
                "first": "İlk Sayfa",
                "last": "Son Sayfa",
                "next": "İleri",
                "previous": "Geri"
            }
        },


    });
</script>
