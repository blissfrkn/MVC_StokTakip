@using MVC_StokTakip.Models.Entity
@model List<Sepet>
@{
    ViewBag.Title = "HepsiniStokEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h5>Hepsini Stoğa Ekle</h5>
    <hr />
</div>


@using (Html.BeginForm("HepsiniStokEkle2", "Girisler", FormMethod.Post, new { @class = "container" }))
{
    foreach (var item in Model)
    {

        @*<div class="form-group">
                <h5>ID: @Html.DisplayFor(x => item.ID)</h5>
            </div>*@
        <div class="form-group">
            Ürün Adı : @Html.DisplayFor(x => item.Urunler.UrunAdi)
        </div>
        <div class="form-group">
            Barkod No: @Html.DisplayFor(x => item.Urunler.BarkodNo)
        </div>
        @*<div class="form-group">
            Stok Kodu: @Html.DisplayFor(x => item.Urunler.StokKodu)
        </div>*@
        <div class="form-group">
            Oem Kod: @Html.DisplayFor(x => item.Urunler.OemKod)
        </div>
        <div class="form-group">
            Miktarı : @Html.DisplayFor(x => item.Miktari)
        </div>
        <div class="form-group">
            Birimi: @Html.DisplayFor(x => item.Urunler.Birimler.Birim)
        </div>
        <hr />

    }



    <div class="container">
        <div class="row">
            <div>
                <button class="btn btn-success">Onay</button>
            </div>
            <div style="margin-left:10px">
                <a href="/Sepet/Index" class="btn btn-dark">İptal</a>
            </div>
        </div>
    </div>

}

