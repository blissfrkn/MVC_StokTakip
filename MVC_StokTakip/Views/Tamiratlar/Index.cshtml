@using MVC_StokTakip.Models.Entity
@model List<Tamiratlar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Tamirat Listesi</h2>

<table id="tbl1" class="table table-responsive-sm" style="margin-top:20px">
    <thead>
        <tr>
            <th>Araç Plaka, Marka, Model</th>
            <th>Müşteri Ad, Soyad</th>
            <th>Tarih</th>
            <th>Detay</th>






        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>
            <td>@Html.DisplayFor(x => k.Araclar.Plaka) @Html.DisplayFor(x => k.Araclar.AracMarka.Marka) @Html.DisplayFor(x => k.Araclar.Model)</td>
            <td>@Html.DisplayFor(x => k.Araclar.Musteriler.Ad) @Html.DisplayFor(x => k.Araclar.Musteriler.Soyad)</td>
            <td>@Html.DisplayFor(x => k.Tarih)</td>
            <td><a href="/Tamiratlar/Detay/?id=@k.ID" class="button btn-block">Detaylar</a></td>

        </tr>
    }
</table>

<br />


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>


<script>
    $('#tbl1').dataTable({});
</script>