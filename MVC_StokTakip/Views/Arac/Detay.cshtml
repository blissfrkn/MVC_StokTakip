@model MVC_StokTakip.Models.Entity.Class1
@{
    ViewBag.Title = "Detay";
}

    <div class="row">
        <div class="col-md-3">

            <!-- Profile Image -->
            <div class="card card-primary card-outline">
                <div class="card-body box-profile">

                    <h3 class="profile-username text-center">@Html.DisplayFor(x =>Model.Araclar.Plaka)</h3>


                    <ul class="list-group list-group-unbordered mb-3">
                        <li class="list-group-item">
                            <b>Marka</b> <a class="float-right">@Html.DisplayFor(x => Model.Araclar.AracMarka.Marka)</a>
                        </li>
                        <li class="list-group-item">
                            <b>Model</b> <a class="float-right">@Html.DisplayFor(x => Model.Araclar.Model)</a>
                        </li>
                        <li class="list-group-item">
                            <b>Şasi No</b> <a class="float-right">@Html.DisplayFor(x => Model.Araclar.SasiNo)</a>
                        </li>
                        <li class="list-group-item">
                            <b>Renk</b> <a class="float-right">@Html.DisplayFor(x => Model.Araclar.Renk)</a>
                        </li>
                    </ul>

                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-header p-2">
                <p style="text-align:center; font-size:1.350em;">ARAÇ BİLGİLERİ</p>
                    <ul class="nav nav-pills">
                        <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Araç Bilgileri</a></li>
                    </ul>
                </div><!-- /.card-header -->
                <div class="card-body">
                    <div class="tab-content">
                        <div class="active tab-pane" id="activity">

                            <h4>Müşteriler</h4>
                            <table id="tbl1" class="table table-responsive-sm">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Ad, Soyad</th>
                                        <th>Telefon</th>
                                        <th>E-Mail</th>       
                                        <th>Detaylar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                   
                                    <tr>
                                        <td>@Html.DisplayFor(x => Model.Araclar.Musteriler.ID)</td>
                                        <td>@Html.DisplayFor(x => Model.Araclar.Musteriler.Ad) @Html.DisplayFor(x => Model.Araclar.Musteriler.Soyad)</td>
                                        <td>@Html.DisplayFor(x => Model.Araclar.Musteriler.Telefon)</td>
                                        <td>@Html.DisplayFor(x => Model.Araclar.Musteriler.Email)</td>
                                        <td><a href="/Musteriler/Detay/?id=@Model.Araclar.Musteriler.ID" class="button btn-block">Bak</a></td>
                                    </tr>

                                   
                                </tbody>
                            </table>
                            <br />
                            <h4>Tamirler</h4>
                            <table id="tbl1" class="table table-responsive-sm">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tarih</th>
                                        <th>Plaka</th>
                                        <th>Fiyat</th>
                                        <th>Detaylar</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Tamiratlars)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(x => item.ID)</td>
                                            <td>@Html.DisplayFor(x => item.Tarih)</td>
                                            <td>@Html.DisplayFor(x => item.Araclar.Plaka)</td>
                                            <td>@Html.DisplayFor(x => item.GenelToplam)</td>
                                            <td><a href="/Tamiratlar/Detay/?id=@item.ID" class="button btn-block">Bak</a></td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                            <br />

                        </div>
                        <!-- /.tab-pane -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
        </div>
    </div>